@model SchoolLevelModel
@{
    ViewData["Title"] = "AddNewSchool";
}
<div id="content">
    <!-- Begin Page Content -->
    <div class="container-fluid">

        <div tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle1" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        
                    </div>
                    <div class="modal-body">
                        <form asp-action="AddNewSchool" method="post" class="user">
                            <div class="form-group row">
                                <div class="col-md-6 mb-3 mb-sm-0">
                                    <label asp-for="Name">Name</label>
                                    <input asp-for="Id" type="hidden"/>
                                    <input asp-for="Name" type="text" class="form-control form-control-user"
                                           placeholder="Name" required>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="Description">Description</label>

                                    <textarea asp-for="Description" rows="2" class="form-control "
                                              placeholder="Description" required></textarea>
                                </div>

                            </div>

                            <hr>

                            <button class="btn btn-primary btn-user btn-block">
                               Save Level
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
